{
  "compilerOptions": {
     // 사용할 JavaScript 표준 라이브러리 기능을 지정
     "lib": [
        "es5",  // ECMAScript 5 표준 기능 사용
        "es6"   // ECMAScript 6 (ES2015) 표준 기능 사용
     ],
     
     // TypeScript가 어떤 JavaScript 버전으로 컴파일할지 설정
     "target": "es5",  // ECMAScript 5 버전으로 컴파일 (구형 브라우저 호환성)
     
     // JavaScript에서 사용할 모듈 시스템을 지정
     "module": "commonjs",  // Node.js에서 사용하는 CommonJS 모듈 시스템 사용
     
     // 모듈을 찾는 방법을 설정 (Node.js 스타일로 모듈 검색)
     "moduleResolution": "node",  // Node.js 모듈 방식 사용
     
     // 컴파일된 JavaScript 파일이 저장될 폴더 지정
     "outDir": "./build",  // TypeScript 컴파일 후 JavaScript 파일이 저장될 폴더 (여기서는 `./build`)
     
     // 데코레이터 사용 시 메타데이터를 출력할지 여부 설정
     "emitDecoratorMetadata": true,  // 데코레이터 관련 메타데이터를 생성하여 추가적인 기능을 사용할 수 있도록 함
     
     // 데코레이터 기능을 사용하려면 반드시 true로 설정해야 함
     "experimentalDecorators": true,  // TypeScript에서 데코레이터 기능 사용을 허용
     
     // source map 파일을 생성하여 디버깅을 쉽게 함
     "sourceMap": true,  // .map 파일을 생성하여 TypeScript 소스와 컴파일된 JavaScript 코드의 관계를 디버거에서 추적할 수 있도록 함
     
     // ES6 모듈을 CommonJS 모듈로 변환 시 호환성 향상
     "esModuleInterop": true  // ES6 `import` 문을 사용할 때 CommonJS 모듈과의 호환성 개선
  },
  "include": [
    "src/**/*",
  ],
  
}
